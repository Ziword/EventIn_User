<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical"
        android:background="@drawable/roundbox">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/rowimg1"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/imgdefaultevent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="E-Sport Event"
                android:layout_marginTop="14dp"
                android:id="@+id/rowjudulEvent"/>

            <TextView
                android:id="@+id/rowPenyelenggara"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="Monkey Gallery"
                android:layout_marginLeft="14dp"
                android:layout_marginTop="14dp"
                android:paddingHorizontal="14dp"
                android:background="@drawable/rounbox_white"/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>