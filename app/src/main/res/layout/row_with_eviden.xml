<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/namaEventWE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:textColor="#6C7D87"
            android:text="Nama Event"/>
        <TextView
            android:id="@+id/tglEventWE"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_light"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="21/02/2021-23/02/2021"/>

        <LinearLayout
            android:layout_marginTop="14dp"
            android:paddingBottom="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/roundbottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <ImageView
                    android:id="@+id/gambarE"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/imgdefeviden"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="5dp"/>
<!--            <TextView-->
<!--                android:layout_marginTop="14dp"-->
<!--                android:layout_width="match_parent"-->
<!--                android:textAlignment="center"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/poppins_light"-->
<!--                android:textColor="@color/black"-->
<!--                android:textSize="12dp"-->
<!--                android:text="Tampilkan Lebih Banyak"/>-->

        </LinearLayout>

    </LinearLayout>
    
</androidx.cardview.widget.CardView>