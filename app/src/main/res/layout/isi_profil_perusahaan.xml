<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rctdet"
    android:id="@+id/homedet_company"
    android:orientation="vertical"
    android:paddingBottom="24dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:textColor="@color/black"
            android:text="Home"
            android:id="@+id/homeBar"/>

        <TextView
            android:id="@+id/tentangBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Tentang"
            android:textColor="@color/dark_50"
            android:textSize="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="18dp"
            android:textColor="@color/dark_50"
            android:text="Event"
            android:id="@+id/eventBar"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_weight="0"
        android:background="@color/black" />


    //Awal Layout Home Detail
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layHomeDetail"
        android:visibility="visible">
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:fontFamily="@font/quicksandbook"-->
<!--            android:textSize="12dp"-->
<!--            android:textColor="@color/black"-->
<!--            android:text="PT Telkom Indonesia (Persero) Tbk (Telkom) adalah Badan Usaha Milik Negara (BUMN) yang bergerak di bidang jasa layanan teknologi informasi"-->
<!--            android:layout_marginTop="14dp"-->
<!--            android:layout_marginRight="14dp"-->
<!--            android:layout_marginLeft="14dp"-->
<!--            android:id="@+id/profSingkat"-->
<!--            android:drawableBottom="@drawable/selengkapnya"/>-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:text="Persentase Sponsorship"
            android:id="@+id/persentase_judul" />
        <com.github.mikephil.charting.charts.PieChart
            android:id="@+id/pieChartProfil"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="14dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></com.github.mikephil.charting.charts.PieChart>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingRight="24dp"
            android:paddingLeft="24dp"
            android:paddingTop="14dp"
            android:id="@+id/eventTerlaksanaLayout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:text="Event Terlaksana"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="end">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12dp"
                    android:textColor="@color/dark_50"
                    android:gravity="center_vertical"
                    android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                    android:text="lebih banyak"
                    android:id="@+id/moreBtn"/>
            </LinearLayout>

        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/horizontalView">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="14dp">

                <LinearLayout
                    android:id="@+id/event1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/rcthomeevent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/defimginprofil">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textSize="12dp"
                            android:text="Monkey ISP"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_margin="5dp"
                            android:id="@+id/lembagaEvent1"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="E-Sport Champion"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/namaEvent1"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/rcthomeevent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/defimginprofil">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textSize="12dp"
                            android:text="Monkey ISP"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_margin="5dp"
                            android:id="@+id/lembagaEvent2"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="E-Sport Champion"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/namaEvent2"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/event3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/rcthomeevent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/defimginprofil">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins"
                            android:textSize="12dp"
                            android:text="Monkey ISP"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:layout_margin="5dp"
                            android:id="@+id/lembagaEvent3"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="match_parent"
                        android:textAlignment="center"
                        android:layout_height="wrap_content"
                        android:text="E-Sport Champion"
                        android:fontFamily="@font/poppins_medium"
                        android:textSize="12dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/namaEvent3"/>
                </LinearLayout>

            </LinearLayout>
        </HorizontalScrollView>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:src="@drawable/btnajukansponsor"
            android:background="@android:color/transparent"
            android:id="@+id/btnAjukan" />
    </LinearLayout> //Akhir dari layout Home Detail

    //Awal Layout Tentang Detail
    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layTentangDetail">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/quicksandbook"
            android:textSize="12dp"
            android:textColor="@color/black"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:text="PT Telkom Indonesia (Persero) Tbk (Telkom) adalah Badan Usaha Milik Negara (BUMN) yang bergerak di bidang jasa layanan teknologi informasi dan komunikasi (TIK) dan jaringan telekomunikasi di Indonesia. Pemegang saham mayoritas Telkom adalah Pemerintah Republik Indonesia sebesar 52.09%, sedangkan 47.91% sisanya dikuasai oleh publik. Saham Telkom diperdagangkan di Bursa Efek Indonesia (BEI) dengan kode “TLKM” dan New York Stock Exchange (NYSE) dengan kode “TLK”."
            android:justificationMode="inter_word"
            android:id="@+id/tentangDetail"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/quicksandbold"
            android:textColor="@color/black"
            android:text="Visi"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/quicksandbook"
            android:textColor="@color/black"
            android:text="Menjadi digital telco pilihan utama untuk memajukan masyarakat."
            android:justificationMode="inter_word"
            android:layout_marginTop="5dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp"
            android:id="@+id/visi_isi"/>

<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="12dp"-->
<!--            android:fontFamily="@font/quicksandbold"-->
<!--            android:textColor="@color/black"-->
<!--            android:text="Misi"-->
<!--            android:layout_marginTop="14dp"-->
<!--            android:layout_marginRight="14dp"-->
<!--            android:layout_marginLeft="14dp"/>-->
<!--        <TextView-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:textSize="12dp"-->
<!--            android:fontFamily="@font/quicksandbook"-->
<!--            android:textColor="@color/black"-->
<!--            android:text="Menjadi digital telco pilihan utama untuk memajukan masyarakat."-->
<!--            android:layout_marginTop="5dp"-->
<!--            android:layout_marginRight="14dp"-->
<!--            android:layout_marginLeft="14dp"-->
<!--            android:id="@+id/misi_isi"/>-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/quicksandbold"
                    android:text="Website"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/quicksandbook"
                    android:textColor="@color/black"
                    android:text="http://www.telkom.co.id"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/website_isi"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:fontFamily="@font/quicksandbold"
                    android:text="Industri"
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="14dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12dp"
                    android:fontFamily="@font/quicksandbook"
                    android:textColor="@color/black"
                    android:text="Layanan dan Teknologi Informasi"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="14dp"
                    android:layout_marginLeft="14dp"
                    android:id="@+id/jenis_perusahaan"/>
            </LinearLayout>
        </LinearLayout> //Akhir Linear Layout Website dan Industri

    </LinearLayout> //Akhir Layout Tentang Detail

    //Awal Layout Event
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone"
        android:id="@+id/layEventDetail">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginLeft="14dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/totpengajuanbg"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:padding="14dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Total Pengajuan"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_weight="0"
                    android:background="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:text="56"
                    android:id="@+id/jumPengajuan"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/eventselesaibg"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="14dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins"
                    android:textColor="@color/black"
                    android:textSize="12dp"
                    android:text="Event Selesai"/>
                <View
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginRight="14dp"
                    android:layout_weight="0"
                    android:background="@color/black" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:textColor="@color/black"
                    android:textSize="35dp"
                    android:text="15"
                    android:id="@+id/jumEvent"/>

            </LinearLayout>

        </LinearLayout> // Akhir Horizontal Layout Jumlah"

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:textColor="@color/black"
            android:text="Event Terlaksana"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="14dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_eventPerusahaan"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            android:layout_marginHorizontal="14dp"></androidx.recyclerview.widget.RecyclerView>

    </LinearLayout> //Akhir Layout Event Detail

</LinearLayout>